  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Nav-Bootstrap Exercise</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <% if(title == 'Express Exercise') { %>
            <a class="nav-link active" href="/"><i class="fa fa-home"></i> Home</a>
          <% } else { %>
            <a class="nav-link" href="/"><i class="fa fa-home"></i> Home</a>
            <% } %>
        </li>
        <li class="nav-item">
          <% if(title == 'News Page') { %>
          <a class="nav-link active" href="/news"><i class="fa fa-file"></i> News</a>
          <% } else { %>
            <a class="nav-link" href="/news"><i class="fa fa-file"></i> News</a>
            <% } %> 
        </li>
        <li class="nav-item">
            <% if(title == 'Info Page') { %>
            <a class="nav-link active" href="/info"><i class="fa fa-info"></i> Info</a>
            <% } else { %>
              <a class="nav-link" href="/info"><i class="fa fa-info"></i> Info</a>
              <% } %>
          </li>
      </ul>
    </div>
  </nav>