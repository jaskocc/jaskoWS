<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  <link rel='stylesheet' href='/stylesheets/style.css' />

  <script>

    var author = {
        'name': 'Bob',
        'lname': 'Bobich',
        'adress': 'First Street 34',
        'phone': '111-222-333',
        'mail': 'bobich@mail.com'
      }

      var disp = "<html><head></head><body>  <p><b>First Name:</b> " + author.name + "</p> <p><b>Last Name:</b> " + author.lname + "</p> </body></html>";
      disp += "<html><head></head><body> <p><b>Adress:</b> " + author.adress + "</p> <p><b>Phone:</b> " + author.phone + "</p> <p><b>Mail:</b> " + author.mail + "</p></body></html>";

    function popUp() {

      var pop = window.open("", "", "width=400,height=400,scrollbars=1,resizable=1,top=100,left=500");

      pop.document.open();
      pop.document.write(disp);
      pop.document.close();

    };

  </script>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Nav-Bootstrap Exercise</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <% if(title == 'Express Exercise') { %>
                <a class="nav-link active" href="/"><i class="fa fa-home"></i> Home</a>
              <% } else { %>
                <a class="nav-link" href="/"><i class="fa fa-home"></i> Home</a>
                <% } %>
            </li>
            <li class="nav-item">
              <% if(title == 'News Page') { %>
              <a class="nav-link active" href="/news"><i class="fa fa-file"></i> News</a>
              <% } else { %>
                <a class="nav-link" href="/news"><i class="fa fa-file"></i> News</a>
                <% } %> 
            </li>
            <li class="nav-item">
                <% if(title == 'Info Page') { %>
                <a class="nav-link active" href="/info"><i class="fa fa-info"></i> Info</a>
                <% } else { %>
                  <a class="nav-link" href="/info"><i class="fa fa-info"></i> Info</a>
                  <% } %>
              </li>
          </ul>
    </div>
  </nav>

  <div class="container">
    <h1>
      <%= title %>
    </h1>
    <br>
    <h3>Our Author:</h3>
    <br>
    <a href="/info" onclick="popUp()"><img src="http://localhost:3000/images/user1.jpg" alt="User1"></a>
    <p><a href="/info" onclick="popUp()">Bob Bobich</a></p>
  </div>

